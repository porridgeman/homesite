extends layout

block content
	h1 #{title}

	script(src='/scripts/EditableList.js')
	script(src='/scripts/LinkList.js')
	script(src='/scripts/PageList.js')

	script.
		$(function() {
			new LinkList("#{name}", $(".left-list"));
			new PageList("#{name}", $(".right-list"));
		});

	.container
		.left-list
			button.add() +
			button.remove() X
			button.down() &darr;
			button.up() &uarr;

			h3 Links:

			each link in links
				p.link
					a.link(href='#{link.url}', target='_blank') #{link.label}

			form#links(name="addLink", title="Add link")
				input#linkUrl(type="text", name="url", placeholder="URL");
				input#linkLabel(type="text", name="label", placeholder="Label");

		.right-list
			button.add() +
			button.remove() X
			button.down() &darr;
			button.up() &uarr;

			h3 Pages:

			each page in pages
				p.link
					a.link(href='/pages/#{page.name}') #{page.title}

			form#pages(name="addPage", title="Add page")
				input#pageTitle(type="text", name="title", placeholder="Title");
				input#pageName(type="text", name="name", placeholder="Name");


